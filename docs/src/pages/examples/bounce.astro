---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="(p5) easing functions">
	<main>
		<section>
			<h2>Bounce</h2>
			<div class="row">
				<figure>
					<div id="sketch-bounce-in"></div>
					<figcaption>
						<p>
							See the docs for <a href="/docs/functioneaseinbounce">function easeInBounce</a>
							</p>



					</figcaption>
				</figure>
				<figure>
					<div id="sketch-bounce-out"></div>
					<figcaption>
						<p>Bounce out</p>
					</figcaption>
				</figure>
				<figure>
					<div id="sketch-bounce-in-out"></div>
					<figcaption>
						<p>Bounce in out</p>
					</figcaption>
				</figure>
			</div>
		</section>
	</main>
	<style>
		main {
			display: flex;
			flex-direction: column;
			margin: 0 auto;
			max-width: 800px;
			padding: 1rem;
		}
		.row {
			display: grid;
			/* grid-template-columns: repeat(3, 1fr); */
			grid-template-columns: 1fr
			gap: 1rem;
		}
		figure {
			margin: 0;
			min-width: 100px;
			min-height: 100px;
		}
		code{
			background-color: lightgoldenrodyellow;
		}
		@media screen and (min-width: 600px) {
			.row {
				grid-template-columns: repeat(3, 1fr);
			}
		}
	</style>

	<script src="https://unpkg.com/p5@1.10.0/lib/p5.min.js" is:inline></script>
	<script
		src="https://unpkg.com/@ff6347/p5-easing@latest/dist/p5.easing.min.js"
		is:inline></script>

	<script is:inline>
		{
			const s = (p5) => {
				p5.setup = () => {
					const canvas = p5.createCanvas(100, 100);
					canvas.parent("sketch-bounce-out");
				};
				p5.draw = () => {
					p5.background(255);
					let y = p5.easeOutBounce(p5.frameCount % 100, 0, 100, 100);
					p5.circle(p5.width / 2, y, 10);
				};
			};

			let myp5 = new p5(s);
		}
	</script>
	<script is:inline>
		{
			const s = (p5) => {
				p5.setup = () => {
					const canvas = p5.createCanvas(100, 100);
					canvas.parent("sketch-bounce-in");
				};
				p5.draw = () => {
					p5.background(255);
					let y = p5.easeInBounce(p5.frameCount % 100, 0, 100, 100);
					p5.circle(p5.width / 2, p5.map(y, 0, 100, 100, 0), 10);
				};
			};

			let myp5 = new p5(s);
		}
	</script>
	<script is:inline>
		{
			const s = (p5) => {
				p5.setup = () => {
					const canvas = p5.createCanvas(100, 100);
					canvas.parent("sketch-bounce-in-out");
				};
				p5.draw = () => {
					p5.background(255);
					let x = p5.easeInOutBounce(p5.frameCount % 100, 0, 100, 100);
					p5.circle(x, p5.height / 2, 10);
				};
			};

			let myp5 = new p5(s);
		}
	</script>
</Layout>
